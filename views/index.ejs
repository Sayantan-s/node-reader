<!DOCTYPE html>
<html lang="en">
<%- include('./partials/title.ejs')  %>
<body>
    <h1>Hello from Home</h1>
    <%- include('./partials/nav.ejs') %>
    <h2>Blogs</h2>
    <div>
        <% if(blogs){ %>
            <% blogs.forEach(({_id,title,subhead,content}) => { %>
                <a href="/blog/<%= _id %>">
                    <h2>
                        <%= title %>
                    </h2>
                    <h3>
                        <%= subhead %>
                    </h3>
                    <p>
                        <%= content %>
                    </p>
                </a>
            <% }) %>
        <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>